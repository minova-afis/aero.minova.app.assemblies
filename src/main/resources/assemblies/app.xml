<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 http://maven.apache.org/xsd/assembly-2.1.0.xsd">
	<id>app</id>
	<formats>
		<format>jar</format>
	</formats>
	<fileSets>
		<fileSet>
			<includes>
				<include>pom.xml</include>
			</includes>
			<useDefaultExcludes>true</useDefaultExcludes>
		</fileSet>
		<fileSet>
			<directory>src/main/app/files</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/app/i18n</directory>
			<includes>
				<include>*.properties</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/app/images</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/app/forms</directory>
			<includes>
				<include>*.form.xml</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/app/pdf</directory>
			<includes>
				<include>**/*</include>
				<include>*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/app/plugins</directory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/app/setup</directory>
			<includes>
				<include>*.xml</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/app/sql</directory>
			<includes>
				<include>*.sql</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/app/tables</directory>
			<includes>
				<include>*.table.xml</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>